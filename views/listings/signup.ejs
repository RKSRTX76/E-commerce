<link rel="stylesheet" href="/css/login.css">
<body id="body">
    <div class="signup-box">
        <h1 class="h1">Sign Up</h1>
        <h4 class="h4">It's free and only take a minute</h4>
        <form class="form" method="post">
            <label>First Name</label>
            <input type="text" placeholder="" class="input">
            <label>Last Name</label>
            <input type="text" placeholder="" class="input">
            <label>Email</label>
            <input type="email" placeholder="" class="input">
            <label>Password</label>
            <input type="password" placeholder="" class="input">
            <label>Confirm Password</label>
            <input type="password" placeholder="" class="input">
            <input type="button" value="submit" class="submit">
        </form>
        <p class="p">By clicking the sign up button,you agree to our <br>
        <a href="#">Terms and Conditions</a></p>
    </div>
    <br>
    <p class="box">Already have an account ? <a href="/login">Login here</a></p>
</body>
